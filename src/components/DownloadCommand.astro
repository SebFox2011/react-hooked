---
import CodeBox from "@/components/CodeBox.astro";

interface Props {
  hookName: string;
}

const site = import.meta.env.SITE;

const { hookName } = Astro.props;
---

<section class="ctp-frappe flex flex-row flex-wrap">
  <input
    id="tab-shadcn"
    type="radio"
    name="download-tabs"
    class="peer/tab-shadcn absolute opacity-0"
    checked
  />
  <label
    for="tab-shadcn"
    class="flex cursor-pointer flex-row items-stretch gap-2 rounded-t-lg bg-ctp-surface1 p-2 px-4 text-ctp-text peer-checked/tab-shadcn:bg-ctp-base"
  >
    Shadcn
  </label>

  <input
    id="tab-curl"
    type="radio"
    name="download-tabs"
    class="peer/tab-curl absolute opacity-0"
  />
  <label
    for="tab-curl"
    class="flex cursor-pointer flex-row items-stretch gap-2 rounded-t-lg bg-ctp-surface1 p-2 px-4 text-ctp-text peer-checked/tab-curl:bg-ctp-base"
  >
    cURL
  </label>

  <input
    id="tab-wget"
    type="radio"
    name="download-tabs"
    class="peer/tab-wget absolute opacity-0"
  />
  <label
    for="tab-wget"
    class="flex cursor-pointer flex-row items-stretch gap-2 rounded-t-lg bg-ctp-surface1 p-2 px-4 text-ctp-text peer-checked/tab-wget:bg-ctp-base"
  >
    wget
  </label>

  <div class="h-0 basis-full"></div>

  <div class="hidden w-full peer-checked/tab-shadcn:block">
    <CodeBox
      code={`npx shadcn add "${site}/raw/${hookName}.json"`}
      lang="bash"
      class="rounded-lg rounded-tl-none"
    />
  </div>
  <div class="hidden w-full peer-checked/tab-curl:block">
    <CodeBox
      code={`curl ${site}/raw/${hookName}.ts --output src/hooks/${hookName}.ts`}
      lang="bash"
      class="rounded-lg rounded-tl-none"
    />
  </div>
  <div class="hidden w-full peer-checked/tab-wget:block">
    <CodeBox
      code={`wget --output-document src/hooks/${hookName}.ts ${site}/raw/${hookName}.ts`}
      lang="bash"
      class="rounded-lg rounded-tl-none"
    />
  </div>
</section>
